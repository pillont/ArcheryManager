<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ArcheryManager.CustomControls.TargetImage">
    <ContentView.Content>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="20" />
            </Grid.RowDefinitions>
            <Image Source="{Binding Source}" Grid.Row="0" />
            <Label Text="{Binding Text}" Grid.Row="1" HorizontalTextAlignment="Center" HorizontalOptions="CenterAndExpand"/>
        </Grid>
    </ContentView.Content>
</ContentView>
