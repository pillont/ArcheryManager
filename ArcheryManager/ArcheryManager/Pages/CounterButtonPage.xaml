<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:page="clr-namespace:ArcheryManager.Pages.PagesTemplates"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ctl="clr-namespace:ArcheryManager.CustomControls"
             x:Class="ArcheryManager.Pages.CounterButtonPage">
    <ScrollView AutomationId="generalScroolViewer">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="3*" />
            </Grid.RowDefinitions>

            <ctl:TotalCounter x:Name="totalCounter" Grid.Row="0" />
            <ScrollView x:Name="scrollArrows" BackgroundColor="AliceBlue" Grid.Row="1">
                <ctl:ArrowUniformGrid x:Name="scoreList" AutomationId="scoreList" Grid.Column="0" CountByRow="6" />
            </ScrollView>
            <ctl:CounterButtons x:Name="counterButtons" Grid.Row="2" />
        </Grid>
    </ScrollView>
</ContentPage>
