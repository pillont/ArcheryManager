<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArcheryManager.Pages.SettingTargetPage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Text="Number of arrows" Grid.Column="0" Grid.Row="0" />
        <Entry Keyboard="Numeric"
                   Text="{Binding ArrowsCount}"
                   Unfocused="ArrowCount_Unfocused"
                   Grid.Column="1"
                   Grid.Row="0" AutomationId="numberArrowEntry" />

        <Label Text="Arrows in decreasing order" Grid.Column="0" Grid.Row="1" VerticalTextAlignment="Center" />
        <Switch IsToggled="{Binding IsDecreasingOrder}"
                Grid.Column="1"
                Grid.Row="1"
                AutomationId="ArrowsOrderSwitch" />
        <Label  Text="See all arrows" Grid.Column="0" Grid.Row="2" VerticalTextAlignment="Center" />
        <Switch IsToggled="{Binding ShowAllArrows}" Grid.Column="1" Grid.Row="2" AutomationId="ShowAllArrowsSwitch" />
        <Label Text="See average" Grid.Column="0" Grid.Row="3" VerticalTextAlignment="Center" />
        <Switch IsToggled="{Binding AverageIsVisible}" Grid.Column="1" Grid.Row="3" AutomationId="VisibilityAverageSwitch" />
    </Grid>
</ContentPage>
